<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:background="#11353232"
    android:elevation="2dp"
    android:padding="4dp"
    app:cardBackgroundColor="#00FFFFFF">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="359dp"
        android:layout_height="151dp"
        android:layout_marginTop="4dp"
        android:background="#00974D4D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/cart_item_price"
            android:layout_marginLeft="32dp"
            android:layout_marginBottom="9dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_item_addons"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sofia_regular"
                    android:text="Add Ons Listed"
                    android:textAlignment="textStart"
                    android:textColor="#B4FFFFFF" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="194dp"
            android:layout_height="40dp"
            android:layout_below="@+id/cart_item_name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sofia_regular"
            android:text="Price"
            android:textAlignment="textStart"
            android:textColor="#C9FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sofia_regular"
            android:text="Item Name"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>