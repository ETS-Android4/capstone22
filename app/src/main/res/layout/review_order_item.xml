<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="365dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="#00974D4D">

        <ScrollView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="94dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_item_addons"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/sofia_regular"
                    android:text="Add Ons Listed"
                    android:textAlignment="textStart"
                    android:textColor="#B4FFFFFF" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/cart_item_name"
            android:layout_width="263dp"
            android:layout_height="39dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="153dp"
            android:fontFamily="@font/sofia_regular"
            android:text="Item Name"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cart_remove_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="26dp"
            android:layout_toEndOf="@+id/cart_item_name"
            android:background="@drawable/roundedbutton"
            android:backgroundTint="#74770C0C"
            android:text="X"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cart_item_price"
            android:layout_width="263dp"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="125dp"
            android:fontFamily="@font/sofia_regular"
            android:text="Price"
            android:textAlignment="textStart"
            android:textColor="#C9FFFFFF"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>