<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingpagebackground"
    tools:context=".OrderMenuPageActivity">


    <TextView
        android:id="@+id/historyTopBox"
        android:layout_width="417dp"
        android:layout_height="96dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/sofia_regular"
        android:text="Menu"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/backArrow2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/left_arrow"
        app:itemRippleColor="#C1C1C1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topMessage2"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:background="@drawable/profile_page_top_curved_box"
        android:fontFamily="@font/sofia_regular"
        android:text="Customize your drink"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyTopBox" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_background_curved"
        app:itemIconTint="@color/icons_color"
        app:itemRippleColor="#C1C1C1"
        app:itemTextColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation_items">

    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <TextView
        android:id="@+id/topMessage3"
        android:layout_width="367dp"
        android:layout_height="399dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/bottom_white_stroke_profile_page"
        android:fontFamily="@font/sofia_regular"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyTopBox" />

    <TextView
        android:id="@+id/topMessage5"
        android:layout_width="367dp"
        android:layout_height="112dp"
        android:layout_marginTop="428dp"
        android:background="@drawable/profile_page_top_curved_box"
        android:fontFamily="@font/sofia_regular"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyTopBox" />

    <Button
        android:id="@+id/button2"
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/createbutton"
        android:text="Continue"
        app:backgroundTint="@color/red_ec"
        app:layout_constraintEnd_toEndOf="@+id/topMessage5"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/topMessage5"
        app:layout_constraintTop_toTopOf="@+id/topMessage5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="264dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/createbutton"
        android:text="Nutrition"
        app:backgroundTint="@color/red_ec"
        app:layout_constraintBottom_toBottomOf="@+id/topMessage5"
        app:layout_constraintEnd_toEndOf="@+id/topMessage5"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/topMessage5"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="345dp"
        android:layout_height="359dp"
        android:layout_marginTop="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMessage2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="82dp"
                android:layout_height="78dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/latte_circle" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="149dp"
                android:layout_height="31dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/sofia_regular"
                android:text="Latte"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.354" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="149dp"
                android:layout_height="31dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="36dp"
                android:fontFamily="@font/sofia_regular"
                android:text="Espresso with milk"
                android:textColor="#B9FFFFFF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>