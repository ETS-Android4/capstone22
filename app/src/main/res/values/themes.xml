<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Carolina_Coffee" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_ec</item>
        <item name="colorPrimaryVariant">@color/red_ec</item>
        <item name="colorOnPrimary">@color/red_ec</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_ec</item>
        <item name="colorSecondaryVariant">@color/red_ec</item>
        <item name="colorOnSecondary">@color/red_ec</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <!-- Working to remove white default screen -->
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/iconGray</item>
    </style>

</resources>